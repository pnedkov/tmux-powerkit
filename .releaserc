{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to tmux-powerkit will be documented in this file."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "NEXT_RELEASE_VERSION=${nextRelease.version} sh scripts/build.sh ${options.env.BUILD_SUFFIX}",
        "publishCmd": "echo '‚úì Build ${nextRelease.version} completed for ${options.env.BUILD_SUFFIX}'"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/powerkit-brightness-${process.env.BUILD_SUFFIX}",
            "label": "üîÜ powerkit-brightness for ${process.env.BUILD_SUFFIX}",
            "name": "powerkit-brightness-${process.env.BUILD_SUFFIX}"
          },
          {
            "path": "dist/powerkit-nowplaying-${process.env.BUILD_SUFFIX}",
            "label": "üéµ powerkit-nowplaying for ${process.env.BUILD_SUFFIX}",
            "name": "powerkit-nowplaying-${process.env.BUILD_SUFFIX}"
          },
          {
            "path": "dist/powerkit-temperature-${process.env.BUILD_SUFFIX}",
            "label": "üå°Ô∏è powerkit-temperature for ${process.env.BUILD_SUFFIX}",
            "name": "powerkit-temperature-${process.env.BUILD_SUFFIX}"
          },
          {
            "path": "dist/powerkit-gpu-${process.env.BUILD_SUFFIX}",
            "label": "üéÆ powerkit-gpu for ${process.env.BUILD_SUFFIX}",
            "name": "powerkit-gpu-${process.env.BUILD_SUFFIX}"
          },
          {
            "path": "dist/powerkit-microphone-${process.env.BUILD_SUFFIX}",
            "label": "üé§ powerkit-microphone for ${process.env.BUILD_SUFFIX}",
            "name": "powerkit-microphone-${process.env.BUILD_SUFFIX}"
          },
          {
            "path": "dist/SHA256SUMS-${process.env.BUILD_SUFFIX}.txt",
            "label": "‚úì Checksums (SHA256) for ${process.env.BUILD_SUFFIX}",
            "name": "SHA256SUMS-${process.env.BUILD_SUFFIX}.txt"
          },
          {
            "path": "dist/BUILD-INFO-${process.env.BUILD_SUFFIX}.txt",
            "label": "‚ÑπÔ∏è Build Information for ${process.env.BUILD_SUFFIX}",
            "name": "BUILD-INFO-${process.env.BUILD_SUFFIX}.txt"
          }
        ],
        "successComment": false,
        "failComment": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}